<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head.ejs") %>
        <title>BlogBlitz</title>
    </head>
    <body class="bg-gray-900">
        <%- include("./partials/nav.ejs") %>

        <section id="blogs" class="container px-5 py-24 mx-auto">
            <div class="flex flex-wrap -m-4">
                <% blogs.forEach(blog => { %>
                <div class="p-4 md:w-1/3">
                    <div
                        class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden"
                    >
                        <img
                            class="lg:h-48 md:h-36 w-full object-cover object-center"
                            src="<%= blog.coverImage %>"
                        />
                        <div class="p-6">
                            <h1
                                class="title-font text-lg font-medium text-white mb-3"
                            >
                                <%= blog.title %>
                            </h1>
                            <h2
                                class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"
                            >
                                <%= new
                                Date(blog.createdAt).toLocaleString('en-US', {
                                year: 'numeric', month: 'short', day:
                                'numeric'}).replace(/, /g, ' ') %>
                            </h2>
                            <div class="flex items-center flex-wrap">
                                <a
                                    id="incrementLink"
                                    href="/blog/<%= blog._id %>"
                                    class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0 learn-more hover:text-indigo-400 cursor-pointer"
                                    >Learn More
                                    <svg
                                        class="w-4 h-4 ml-2"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        fill="none"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <path d="M5 12h14"></path>
                                        <path d="M12 5l7 7-7 7"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </section>

        <%- include("./partials/scripts.ejs") %>
    </body>
</html>
