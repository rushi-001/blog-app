<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("./partials/head.ejs") %>
        <title>BlogBlitz-Blog</title>
    </head>
    <body class="bg-gray-900">
        <%- include("./partials/nav.ejs") %>

        <div class="container mx-auto relative m-3">
            <div class="overflow-hidden h-96 w-full relative">
                <img
                    src="<%= blog.coverImage %>"
                    alt="cover-image"
                    class="object-cover h-full w-full"
                />
                <div class="w-full absolute bottom-0 p-2 left-0 bg-gray-300 rounded-md bg-opacity-30 mx-auto flex flex-wrap flex-col md:flex-row items-start">
                    <div class="mr-auto md:mb-0 md:mr-4">
                        <h1 class="text-black text-3xl"><%= blog.title %></h1>
                        <h3 class="text-black">By, <%= blog.author.fullName %></h3>
                    </div>
                </div>
                                
            </div>
            <div class="prose prose-invert max-w-none text-white m-10">
                <%- blog.body %>
            </div>
        </div>

        <%- include("./partials/scripts.ejs") %>
    </body>
</html>
